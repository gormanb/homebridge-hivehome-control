{
  "displayName": "Homebridge Hive Home Control",
  "name": "homebridge-hivehome-control",
  "version": "1.0.1",
  "description": "Allows control of Hive devices, including water heaters, through Homebridge.",
  "license": "Apache-2.0",
  "repository": {
    "type": "git",
    "url": "https://github.com/gormanb/homebridge-hivehome-control.git"
  },
  "bugs": {
    "url": "https://github.com/gormanb/homebridge-hivehome-control/issues"
  },
  "engines": {
    "node": ">=14.18.1",
    "homebridge": ">=1.3.5"
  },
  "main": "dist/index.js",
  "bin": "bin/hive2fa.mjs",
  "scripts": {
    "lint": "eslint src/**.ts --max-warnings=0",
    "watch": "npm run build && npm link && nodemon",
    "build": "rimraf ./dist && tsc",
    "prepublishOnly": "npm run lint && npm run build",
    "postinstall": "npx pympip3 install git+https://github.com/gormanb/Pyhiveapi.git@v0.5.16.1"
  },
  "keywords": [
    "homebridge-plugin",
    "hive",
    "homekit",
    "hot water",
    "heating",
    "thermostat",
    "smart home"
  ],
  "dependencies": {
    "enquirer": "^2.4.1",
    "pymport": "^1.4.3"
  },
  "devDependencies": {
    "@types/node": "^18.16.20",
    "@typescript-eslint/eslint-plugin": "^5.62.0",
    "@typescript-eslint/parser": "^5.62.0",
    "eslint": "^8.45.0",
    "homebridge": "^1.6.0",
    "nodemon": "^3.0.1",
    "rimraf": "^3.0.2",
    "ts-node": "^10.9.1",
    "typescript": "^4.9.5"
  }
}
